	            <b><%= gallery_2[i].login %> - <%= gallery_2[i].age %></b><br>
	            <%= gallery_2[i].bio%>
	        </div>
	        </div>
	        <a href="/profil/<%=gallery_2[i].login%>"><button type="button" class="btn btn-success btn-xs btn_inr">Check my profile!  </button></a>
	            </div>
	        </div>
	    <% } %>
	<% } %>
	</div>

