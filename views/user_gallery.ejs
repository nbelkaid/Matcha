<!-- Formattage form selction -> body : age_min age_max distance_min distance_max pop_min pop_max -->
<% if(locals.gallery) { %>
    <div>
    <form action="/" method="POST">
        <label class="text_plain text-left text-primary">age min: </label>
        <input type="text" name="age_min">
        <label class="text_plain text-left text-primary">age max: </label>
        <input type="text" name="age_max">
        <label class="text_plain text-left text-primary">distance min: </label>
        <input type="text" name="distance_min">
        <label class="text_plain text-left text-primary">distance max: </label>
        <input type="text" name="distance_max">
        <label class="text_plain text-left text-primary">pop min: </label>
        <input type="text" name="pop_min">
        <label class="text_plain text-left text-primary">pop max: </label>
        <input type="text" name="pop_max">
        <label class="text_plain text-left text-primary">Sort: </label>
        <label class="radio-inline" style="color:white;"><input type="radio" name="sort" checked="true" value="distance up">Distance<i class="fa fa-chevron-up" aria-hidden="true"></i></label>
        <label class="radio-inline" style="color:white;"><input type="radio" name="sort" value="distance down">Distance<i class="fa fa-chevron-down" aria-hidden="true"></i></label>
        <label class="radio-inline" style="color:white;"><input type="radio" name="sort" value="age up">Age<i class="fa fa-chevron-up" aria-hidden="true"></i></label>
        <label class="radio-inline" style="color:white;"><input type="radio" name="sort" value="age down">Age<i class="fa fa-chevron-down" aria-hidden="true"></i></label>
        <label class="radio-inline" style="color:white;"><input type="radio" name="sort" value="pop up">Pop<i class="fa fa-chevron-up" aria-hidden="true"></i></label>
        <label class="radio-inline" style="color:white;"><input type="radio" name="sort" value="pop down">Pop<i class="fa fa-chevron-down" aria-hidden="true"></i></label>

        <input type="submit" class="btn btn-primary" value="Filter">
    </form>
    </div>
    <% for(var i=0; i < gallery.length; i++) { %>
        <div class="col-md-4">
        <div class="user_box">
        <div class="panel-body">
        <% if(gallery[i].path){ %>
            <img class="img-responsive img-circle mini_prof_pic" src="<%= gallery[i].path%>.jpg"/>
        <% } else if(!gallery[i].path) { %>
            <img class="img-responsive img-circle mini_prof_pic" src="/images/default.png"/>
        <% } %>
        <div class="con_ina">
            <b><%= gallery[i].login %> - <%= gallery[i].age %></b><br>
            <%= gallery[i].bio%>
        </div>
        </div>
        <a href="/profil/<%=gallery[i].login%>"><button type="button" class="btn btn-success btn-xs btn_inr">Check my profile!  </button></a>
            </div>
        </div>
    <% } %>
<% } %>